@import url(https://fonts.googleapis.com/css?family=Roboto)

html, body 
  width: 100%
  height: 100%
  margin: 0
  padding: 10px
  font-family: 'Roboto', sans-serif

.layer
  margin: 20px
  border-width: 5px
  border-style: solid
  border-color: #fdfdaf
  width: fit-content
  height: fit-content


.layer > .bitmap:first-child
  position: absolute
  color: white

